<div class="modal fade" id="ModalAlterarEmail" tabindex="-1" role="dialog" aria-labelledby="AlterarEmail" aria-hidden="true" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title text-danger"><b>Deseja Alterar seu Email?</b><br /></h4>
                <p class="lead">Digite o novo email desejado para o uso no sistema</p>
            </div>
            @using (Html.BeginForm("AlterarEmailUsuarioAR", "Usuario", FormMethod.Post))
            {
                <div class="modal-body">
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Email Atual:</label>
                        <input type="email" class="form-control" name="EmailUsuario" id="EmailUsuario" value="@Session["sessaoEmail"]" readonly="readonly">
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="col-form-label">Novo Email:</label>
                        <input type="email" class="form-control" name="NovoEmailUsuario" id="NovoEmailUsuario">
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-success form-group" type="submit"><i class="fa fa-check"></i> Confirmar</button>
                    <button class="btn btn-danger form-group" type="reset"><i class="fa fa-trash"></i> Limpar</button>
                    <button class="btn btn-primary form-group" data-dismiss="modal"><i class="fa fa-reply"></i> Voltar</button>
                </div>
                @Html.AntiForgeryToken()
            }
        </div>
    </div>
</div>
