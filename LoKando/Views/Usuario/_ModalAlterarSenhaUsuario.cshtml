<div class="modal fade" id="ModalAlterarSenha" tabindex="-1" role="dialog" aria-labelledby="AlterarSenha" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title text-danger"><b>Deseja Alterar sua Senha?</b><br /></h4>
                <p class="lead">Digite a nova senha desejada para o uso no sistema</p>
            </div>
            @using (Html.BeginForm("AlterarSenhaUsuarioAR", "Usuario", FormMethod.Post))
            {
                <div class="modal-body">
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Email Atual:</label>
                        <input type="email" class="form-control" name="txtEmailUsuario" id="txtEmailUsuario" value="@Session["sessaoEmail"]" readonly="readonly">
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Senha Atual:</label>
                        <input type="password" class="form-control" id="txtAtualSenhaUsuario" name="txtAtualSenhaUsuario">
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="col-form-label">Nova Senha:</label>
                        <input type="password" class="form-control" id="txtNovaSenhaUsuario" name="txtNovaSenhaUsuario" onfocusout="SenhaUsuario()">
                        <div id="validaSenha"></div>
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="col-form-label">Confirme a Nova Senha:</label>
                        <input type="password" class="form-control" id="txtConfirmaNovaSenhaUsuario" name="txtConfirmaNovaSenhaUsuario" onfocusout="ConfirmaSenhaUsuario()">
                        <div id="confirmaSenha"></div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-success form-group" type="submit"><i class="fa fa-check"></i> Confirmar</button>
                    <button class="btn btn-danger form-group" type="reset"><i class="fa fa-trash"></i> Limpar</button>
                    <button class="btn btn-primary form-group" data-dismiss="modal"><i class="fa fa-reply"></i> Voltar</button>
                </div>
                @Html.AntiForgeryToken()
            }
        </div>
    </div>
</div>
